{% extends 'base.html.twig' %}

{% block title %}
    Login
{% endblock %}

{% block header %}
{% endblock %}

{% block content %}
    <main>
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-4 col-md-offset-4">
                    <h1 class="text-center login-title">Sign in to continue to Bootsnipp</h1>
                    <div class="account-wall">
                        <img class="profile-img" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSV81CdJ7lMwAoCNj93M4izTtMlT5kQ_5ZiOFQIQ3R4o7dfy-Mh"
                             alt="">
                        {{ form_start(form, {'attr': {'class': 'form-signin'} }) }}
                        {{ form_row(form._username, {'attr': {'class': 'form-control'} }) }}
                        {{ form_row(form._password, {'attr': {'class': 'form-control'} }) }}

                        {% if error %}
                            <div class='alert alert-danger alert-dismissable drop-shad'>
                                <a href='#' class='close' data-dismiss='alert' aria-label='close'>Ã—</a>
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            Sign in</button>
                        <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
                        {{ form_end(form) }}
                    </div>
                    <a href="#" class="text-center new-account">Create an account </a>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block footer %}
{% endblock %}