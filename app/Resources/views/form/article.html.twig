{% extends 'base.html.twig' %}

{% block title %}Blogas{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>New Post</h1>
                <hr>
                {% for flash_message in app.session.flashBag.get('success') %}
                    <div class="alert alert-success">
                        {{ flash_message }}
                    </div>
                {% endfor %}
                <form method="post" enctype="multipart/form-data">
                    {{ form_widget(form) }}

                    <button type="submit" class="btn btn-primary" formnovalidate>Upload</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
