{% extends 'base.html.twig' %}

{% block title %}Blogas{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Settings</h1>
                <hr>
                {{ form_start(form) }}
                {{ form_row(form.oldPassword) }}
                {{ form_row(form.newPassword) }}
                <button type="submit" class="btn btn-success">Change</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
